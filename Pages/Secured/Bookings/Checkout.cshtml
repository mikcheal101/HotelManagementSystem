@page
@model HotelManagementSystem.Pages.Secured.Bookings.CheckoutModel
@{
    ViewData["Title"] = "Checkout Customer";
}


<form method="post" >
    <div class="container">
        <div class="row">
            <div class="col">
                <h6>Checkout Room Form</h6>
            </div>
            <div class="col text-right">
                <a class="btn btn-sm btn-primary px-3 text-capitalize" asp-area="" asp-page="/Secured/Bookings/Index">return to bookings</a>
            </div>
        </div>
        <hr class="dropdown-divider" />

        <div class="row col">
            <div asp-validation-summary="All" class="text-danger text-sm"></div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Customer:</label>
                    <strong class="text-info">@Model.Booking.Customer.FullName</strong>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Email Address:</label>
                    <strong class="text-info">@Model.Booking.Customer.Email</strong>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label>Room Details:</label>
                    <strong class="text-info">@Model.Booking.Room.PreferedName</strong>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Nights:</label>
                    <strong class="text-info">@Model.Booking.Nights</strong>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Check-in Time:</label>
                    <strong class="text-info">@Model.Booking.CheckInTime</strong>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label>Expected Check-out Time: </label>
                    <strong class="text-info">@Model.Booking.ExpectedCheckOutTime</strong>
                </div>
            </div>
        </div>

        <hr class="dropdown-divider" />

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Check-out Time: </label>
                    <strong class="text-info">@Model.Input.CheckoutTime</strong>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Penalty: </label>
                    <strong class="text-info">₦ @Convert.ToDecimal(Model.Input.Penalty).ToString("#,##0.00")</strong>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <button type="submit" class="px-3 btn btn-sm btn-success mt-4 text-capitalize">Confirm Checkout</button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <hr class="dropdown-divider" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

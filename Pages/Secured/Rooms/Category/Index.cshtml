@page
@model HotelManagementSystem.Pages.Secured.Rooms.Category.IndexModel
@{
    ViewData["Title"] = "Room Categories";
}



<div class="container">
    <div class="row">
        <div class="col">
            <h6>Room Categories Listing</h6>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <hr class="dropdown-divider"/>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Cost Per Night (NGN)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in @Model.RoomCategories)
                    {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.CostPerNight</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-sm px-3 btn-danger" asp-area="" asp-page="/Secured/Rooms/Category/Delete" asp-route-id="@category.Id">delete</a>
                                <a class="btn btn-sm px-3 btn-ifo" asp-area="" asp-page="/Secured/Rooms/Category/Update" asp-route-id="@category.Id">edit</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class=""></div>
    </div>
</div>
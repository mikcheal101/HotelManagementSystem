@using System;
@using Microsoft.AspNetCore.Identity;
@using HotelManagementSystem.Models;
@inject SignInManager<Person> SignInManager;
@inject UserManager<Person> UserManager;


@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Secured/Index">Dashboard</a>
        </li>
        <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Secured/Index">Rooms</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Secured/Index">Employees</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Secured/Index">Customers</a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Authentication/Logout">
                <i class="fa fa-sign-out"></i>
                Logout
            </a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Authentication/Index">Login</a>
        </li>
    </ul>
}